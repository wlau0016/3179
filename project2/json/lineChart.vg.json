{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 450,
    "data": {
        "url": "data/travel_spending.csv"
    },
    "layer": [
        {
          "encoding": {
            "x": {"field": "Year", "type": "ordinal","axis":{"labelAngle": 0 , "labelFontSize": 12 , "titleFontSize": 14}, "title":""},
            "y": {"field": "Travel Spending Amount", "type": "quantitative", "axis":{"labelFontSize": 12 , "titleFontSize": 14}},
            "color": {"field": "Type", "type": "nominal"}
          },
          "layer": [
            {"mark": "line"},
            {
              "params": [{
                "name": "label",
                "select": {
                  "type": "point",
                  "encodings": ["x"],
                  "nearest": true,
                  "on": "mouseover"
                }
              }],
              "mark": "point",
              "encoding": {
                "opacity": {
                  "condition": {
                    "param": "label",
                    "empty": false,
                    "value": 1
                  },
                  "value": 0
                }
              }
            }
          ]
        },
        {
          "transform": [{"filter": {"param": "label", "empty": false}}],
          "layer": [
            {
              "mark": {"type": "rule", "color": "gray"},
              "encoding": {
                "x": {"type": "ordinal", "field": "Year"}
              }
            },
            {
              "encoding": {
                "text": {"type": "quantitative", "field": "Travel Spending Amount"},
                "x": {"type": "ordinal", "field": "Year"},
                "y": {"type": "quantitative", "field": "Travel Spending Amount"}
              },
              "layer": [
                {
                  "mark": {
                    "type": "text",
                    "stroke": "white",
                    "strokeWidth": 2,
                    "align": "left",
                    "dx": 5,
                    "dy": -5
                  }
                },
                {
                  "mark": {"type": "text", "align": "left", "dx": 5, "dy": -5},
                  "encoding": {
                    "color": {"type": "nominal", "field": "Type"}
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  